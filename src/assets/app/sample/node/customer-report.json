{
  "title": "客户相关统计",
  "body": [
    {
      "type": "report",
      "header": {
        "text": {
          "spacer": "md",
          "title": {
            "label": "客户相关统计",
            "style": "style-v4",
            "classes": "mat-display-1 m-bottom-0"
          }
        }
      },
      "form": [
        {
          "key": "filter",
          "className": "",
          "fieldGroupClassName": "display-flex flex-wrap",
          "fieldGroup": [
            {
              "type": "mat-select",
              "key": "customer",
              "defaultValue": 5,
              "className": "display-block m-bottom-sm m-right-sm",
              "api": "/api/v2/node/filter/customer",
              "templateOptions": {
                "label": "选择客户",
                "description": "请选择客户"
              }
            },
            {
              "type": "mat-select",
              "key": "year",
              "defaultValue": 5,
              "className": "display-block m-bottom-sm m-right-sm",
              "templateOptions": {
                "label": "年份",
                "description": "请选择年份",
                "options": [
                  {
                    "label": "2023",
                    "value": 2023
                  },
                  {
                    "label": "2022",
                    "value": 2022
                  },
                  {
                    "label": "2021",
                    "value": 2021
                  },
                  {
                    "label": "2020",
                    "value": 2020
                  }
                ]
              }
            }
          ]
        }
      ],
      "params": {
        "api": "/api/v3/statistics/customer/work"
      },
      "row": 1,
      "box": [
        {
          "data": {
            "toggle": [
              {
                "label": "柱状图",
                "icon": {
                  "name": "equalizer",
                  "inline": true
                },
                "value": "bar"
              },
              {
                "label": "折线图",
                "icon": {
                  "name": "show_chart",
                  "inline": true
                },
                "value": "line"
              }
            ]
          },
          "content": {
            "type": "chart",
            "tooltip": {
              "trigger": "axis"
            },
            "legend": {
              "selected": {
                "会议": true,
                "案件": false,
                "项目": false,
                "工时": false
              },
              "selectedMode": "single"
            },
            "xAxis": {
              "type": "category",
              "axisLabel": {
                "interval": 0,
                "rotate": 30
              }
            },
            "yAxis": {
              "type": "value"
            },
            "series": [
              {
                "type": "bar",
                "label": {
                  "position": "top",
                  "show": true
                },
                "datasetIndex": 0
              },
              {
                "type": "bar",
                "label": {
                  "position": "top",
                  "show": true
                },
                "datasetIndex": 0
              },
              {
                "type": "bar",
                "label": {
                  "position": "top",
                  "show": true
                },
                "datasetIndex": 0
              },
              {
                "type": "bar",
                "label": {
                  "position": "top",
                  "show": true
                },
                "datasetIndex": 0
              }
            ]
          }
        }
      ]
    }
  ]
}